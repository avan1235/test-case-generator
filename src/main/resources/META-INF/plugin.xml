<idea-plugin>
    <id>com.procyk.maciej.tcgenerator</id>
    <name>Test Case Generator</name>
    <vendor>Maciej Procyk</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.procyk.maciej.tcgenerator.services.MyApplicationService"/>
        <projectService serviceImplementation="com.procyk.maciej.tcgenerator.services.MyProjectService"/>
    </extensions>

    <projectListeners>
        <listener class="com.procyk.maciej.tcgenerator.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
