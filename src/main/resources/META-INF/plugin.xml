<idea-plugin>
    <id>com.github.avan1235.testtemplates</id>
    <name>test-templates</name>
    <vendor>avan1235</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.avan1235.testtemplates.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.avan1235.testtemplates.services.MyProjectService"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.avan1235.testtemplates.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
